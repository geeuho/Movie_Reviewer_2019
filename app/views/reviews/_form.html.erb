<% if !!flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <p><%= e %></p>
    <% end %>
<% end %>

<div><%="Post review for #{@review.movie.title}"%></div>
<div><%=@user.name%></div>
<%= form_for @review do |f| %>
  <%= f.hidden_field :movie_id, :value => @review.movie.id %>
  <%= f.hidden_field :user_id, :value => @review.user.id %>
  <br><br>
  <%= f.label :title%>
  <%= f.text_field :title%>
  <br><br>
  <%= f.label :rating%>
  <%= f.number_field :rating %>
  <br><br>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br><br>
  <%= f.submit  %>
<% end %>

