<center>

<% if logged_in? %>
<h1>Welcome to MovieCritic <%= current_user.name%>.</h1>
<%else%>
<h1>Welcome to MovieCritic!</h1><p>Please Log In or Create Username</p>
<%= link_to "Create new User", '/signup' %><br>
<%end%>


<% if logged_in? %>
<%= form_tag('/sessions', method: 'delete') do %>
  <input type=submit value='Logout'><br>
<%end%>
<%else%><br>
<%= form_tag('/sessions', method: 'post') do %>
  <input type=submit value='Login'>
<% end %>
<%end%>
</center>
