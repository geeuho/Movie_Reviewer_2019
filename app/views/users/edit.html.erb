<% if !!flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <p><%= e %></p>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <br><br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br><br>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <br><br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <br><br>
  <%= f.submit "Edit User"%>
<% end %>
